<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SPEED + LIMIT + STATUS -->
        <TextView
            android:id="@+id/txtSpeed"
            android:text="@string/speed_value_placeholder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtLimit"
            android:text="@string/limit_value_placeholder"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtStatus"
            android:text="@string/status_value_placeholder"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- SWITCHES -->
        <Switch
            android:id="@+id/swShowOverlay"
            android:text="@string/show_overlay"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/swBroadcast"
            android:text="@string/enable_broadcast"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- <Switch
            android:id="@+id/swUseMph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_use_mph"
            android:layout_marginBottom="16dp" /> -->

        <!-- NEW: OVERSPEED MODE SWITCH -->
        <Switch
            android:id="@+id/swOverspeedMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use percentage overspeed"
            android:layout_marginBottom="12dp" />

        <!-- OVERSPEED SLIDER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtOverspeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overspeed tolerance: 5%"
                android:textSize="18sp"
                android:layout_marginEnd="12dp" />

            <SeekBar
                android:id="@+id/seekOverspeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="30"
                android:progress="5" />
        </LinearLayout>

        <!-- BEEP VOLUME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Label -->
            <TextView
                android:id="@+id/txtBeepVolumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beep_volume_label"
                android:textSize="18sp"
                android:layout_marginEnd="12dp" />

            <!-- Slider -->
            <SeekBar
                android:id="@+id/seekBeepVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:layout_marginEnd="12dp" />

            <!-- Test button -->
            <Button
                android:id="@+id/btnTestBeep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beep_volume_test" />
        </LinearLayout>

        <!-- OVERLAY TEXT BRIGHTNESS SLIDER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/lblBrightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overlay_text_brightness"
                android:textSize="18sp"
                android:layout_marginEnd="12dp" />

            <SeekBar
                android:id="@+id/seekBrightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="100" />
        </LinearLayout>

        <!-- OVERLAY TEXT SIZE SLIDER -->
        <LinearLayout
            android:id="@+id/layoutSpeedoSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtSpeedoSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speedo_size_title"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekSpeedoSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4" />

            <TextView
                android:id="@+id/txtSpeedoSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speedo_size_default" />
        </LinearLayout>


        <!-- START / STOP -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStart"
                android:text="@string/start_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnStop"
                android:text="@string/stop_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <!-- DEBUG SCREEN BUTTON -->
        <Button
            android:id="@+id/btnDebugScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_debug_screen"
            android:layout_marginTop="12dp" />

        <!-- DIAGNOSTICS -->
        <!-- For now we will hide the button. It can be re-enabled in case of issues
        <Button
            android:id="@+id/btnDiagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_diagnostics"
            android:layout_marginTop="12dp" /> -->

    </LinearLayout>
</ScrollView>
